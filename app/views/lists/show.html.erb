<div class="page-header">
  <h1><%= @list.name %></h1>
  <h3><%= link_to "Rename this List", edit_list_path(@list) %> | <%= link_to "Delete this list", @list, method: :delete, data: { confirm: "Are you sure?" } %> | <%= link_to "Add a task", new_task_path(list: @list) %></h3>
</div>

<% if @list.tasks.any? %>
	<table class="table">
		<tr>
			<th>Task</th>
			<th>Completed?</th>
		</tr>

		<% @list.tasks.each do |task| %>
			<tr>
				<td><%= task.name %></td>
				<td><%= task.completed %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	<h4>You have no tasks yet, would you like to <%= link_to "add one?", new_task_path %></h4>
<% end %>